<%= simple_form_for [@post, @new_comment], remote: true do |f| %>

    <div class="form-group">
      <%= f.text_area :body, rows: '5', class: 'form-control', placeholder: "Write a comment &hellip;".html_safe %>
      <%= f.input :user_id, as: :hidden, input_html: { value: "#{current_user.id}" } %>
      <%= f.input :post_id, as: :hidden, input_html: { value: "#{@post.id}" } %>
    </div>

    <%= f.submit 'Post your comment', class: 'btn btn-primary' %>
<% end %>
