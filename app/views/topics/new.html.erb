<% provide(:title, 'Create a new topic') %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">
      <%= I18n.t("category.new.page_header") %>
    </h1>
    <p class="text-center" style="padding-bottom: 20px;">
      <small>
        <%= I18n.t("category.new.warning") %>
        <br>
        <span class="pull-right"> --Thanks.</span>
      </small>
    </p>

    <%= simple_form_for @topic do |f| %>
	    <%= f.input :name %>
		  <%= f.submit I18n.t("category.new.button"), class: 'btn btn-info' %>
    <% end %>
  </div>
</div>
