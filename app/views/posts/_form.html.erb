<% post ||= @post %>

<%= simple_form_for(post, html: { class: "form-group", id: "new_post_form", multipart: false }) do |f| %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <span>Post Form</span>
    </div>
    <div class="panel-body">
      <%= f.input :subject, input_html: { no_autocomplete: "" } %>
      <div class="row">
        <div class="col-lg-6">
          <%= f.input :tag_list, required: true, placeholder: false, input_html: {data: { role: "tagsinput" }} %>
        </div>
        <div class="col-xs-12 col-sm-8 col-lg-4">
          <%= f.input :topic_id, collection: Topic.all.map {|n| [n.name.titleize, n.id]}, include_blank: false, required: true %>
        </div>
        <div class="col-xs-12 col-sm-4 col-lg-2">
          <%= f.input :mood, collection: I18n.t("post.mood").map {|k,v| v}, include_blank: true, prompt: I18n.t("post.title").html_safe, input_html: {class: "select optional form-control"} %>
        </div>
      </div>
      <%= f.input :body %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
