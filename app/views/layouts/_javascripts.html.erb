<!-- JavaScripts included in <body> for initializing Backbone views, etc. -->
<!-- Immediately executable javascript -->
<% if content_for? :javascript %>
  <%= yield :javascript %>
<% end %>
<!-- Document ready javascript -->
<% if content_for? :on_ready %>
  <script>

    head.ready(function(){
      <%= yield :on_ready %>
    })
    <% if current_user %>
      window.currentuser = {
             id: "<%=  current_user.id %>",
             firstname:"<%=  current_user.first_name %>",
             lastname:"<%=  current_user.last_name %>",
             username:"<%=  current_user.username %>",
             imageurl:"<%=  current_user.image_url %>",
             email:"<%=  current_user.email %>"
      };

