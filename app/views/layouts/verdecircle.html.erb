<!DOCTYPE html>
<%# "Layout used only for verdecircle.com frontend" %>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="<%= brand_name %>">
    <meta name="author" content="<%= brand_name %>">
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : I18n.t('brand.company') %>">
    <meta property="og:type" content="website">
    <!-- <meta property="og:image" content=""> -->
    <meta property="og:site_name" content="<%= I18n.t('brand.company') %>">
    <meta name="robots" content="index, follow">
    <link rel="image_src" href="<%= image_url 'images/verde-circle-logo-name-centered.png' %>">
    <link rel="image_src" href="<%= image_url 'images/verde-circle-icon.png' %>">
    <link rel="image_src" href="<%= image_url 'images/thriii-circle-icon.png' %>">
    <title><%= content_for?(:title) ? yield(:title) : view_bag_title %></title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => :true %>
    <%= stylesheet_link_tag 'verdecircle', media: 'all', 'data-turbolinks-track' => :true %>
    <% if content_for :stylesheets %>
      <%= yield :stylesheets %>
    <% end %>
    <!--[if lt IE 9]
      <%= javascript_include_tag 'ie', 'data-turbolinks-track' => true %>
    -->
    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'head', 'data-turbolinks-track' => :true %>
    <%= headjs_include_tag 'application', 'data-turbolinks-track' => :true %>
    <%= yield :head %>
  </head>
  <body class="controller__<%= controller_name %> action__<%= action_name %>" data-feed="{<%= %Q("current_user":{"id":"#{current_user.id if user_signed_in?}","username":"#{current_user.username if user_signed_in?}"}) %>}">
    <%= render 'layouts/navbars/verdecircle' %>
    <div class="container-fluid">
      <div class="errors__container">
        <%= render 'layouts/messages' %>
      </div>
        <%= yield %>

      <footer class="page-footer">
        <% if content_for? :footer %>
          <%= yield :footer %>
        <% else %>
          <%= render 'layouts/footer' %>
        <% end %>
      </footer>
    </div>
    <%= render 'layouts/javascripts' %>
    <%= render 'layouts/analytics' %>
  </body>
</html>
