<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Actions</th>
        <th>Post Date</th>
        <th>Post</th>
        <th>Up Votes</th>
        <th>Down Votes</th>
        <th>Comments</th>
        <th>Favorites</th>
      </tr>
    </thead>
    <tbody>
      <% @user.posts.each do |p| %>
        <tr data-trigger="hover click" data-container="body" data-toggle="popover" data-placement="top" data-content="This post earned you  <%= pluralize(Random.rand(15), "point") %>.">
          <td class="info">
            <a href="<%= post_path(p) %>" title="View Post" data-container="body" data-toggle="tooltip" data-placement="top" data-title="View Post">
              <i class="fa fa-eye"></i>
            </a>
          </td>
          <td>
            <%= p.created_at %>
          </td>
          <td>
            <%= p.subject %>
          </td>
          <td class="success">
            <%= p.cached_votes_up %>
          </td>
          <td class="danger">
            <%= p.cached_votes_down %>
          </td>
          <td>
            <%= p.comments.length %>
          </td>
          <td>
            <%= p.favorites.length %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
