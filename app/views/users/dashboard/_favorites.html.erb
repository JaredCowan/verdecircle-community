<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Added</th>
        <th>Subject</th>
        <th>Votes</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
      <% @user.favorites.each do |f| %>
        <% post = Post.find(f.favorable_id) %>
        <tr>
          <td>
            <%= f.created_at %>
          </td>
          <td>
            <%= post.subject %>
          </td>
          <td>
            <%= post.cached_votes_total %>
          </td>
          <td>
            <%= post.comments.length %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
