<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>Comment Date</th>
        <th>Comment</th>
        <th>Up Votes</th>
        <th>Down Votes</th>
      </tr>
    </thead>
    <tbody>
      <% @user.comments.order('created_at DESC').each do |c| %>
        <tr data-trigger="hover click" data-container="body" data-toggle="popover" data-placement="top" data-content="This comment earned you  <%= pluralize(Random.rand(15), "point") %>.">
          <td>
            <%= c.created_at %>
          </td>
          <td>
            <%= c.body %>
          </td>
          <td class="success">
            <%= c.cached_votes_up %>
          </td>
          <td class="danger">
            <%= c.cached_votes_down %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>