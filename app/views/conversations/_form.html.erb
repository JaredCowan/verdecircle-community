<%= simple_form_for :conversation, url: :conversations do |f| %>
  <%= collection_select(:conversation, :recipients, User.all, :email, :name_with_initial, prompt: true) %>
  <%= f.input :subject %>
  <%= f.input :body, as: :text %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= f.button :submit, 'Cancel', type: :reset, class: 'btn-danger' %>
  </div>
<% end %>
